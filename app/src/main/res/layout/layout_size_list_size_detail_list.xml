<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="5dp"
    >

    <ImageView
        android:id="@+id/img_size_detail_list"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/shirt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_size_detail_list_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textSize="18sp"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/txt_size_detail_list_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextViewgrdgdrgdgrdrgdrgdrgdgrdrgdrgdrgdrgdrgdrgd456456456456fghfthfthfthfth"
            android:visibility="visible"
            android:ellipsize="end"
            android:lines="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_size_detail_list_size"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:text="XXffLgrgrgrg"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="2"/>
</LinearLayout>